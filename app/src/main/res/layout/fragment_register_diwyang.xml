<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_15_trans"
    android:orientation="vertical"
    tools:context=".features.registerDiwyang.RegisterDiwyangFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_gradient_background"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <TextView
                    android:id="@+id/tvRegistrationStep"
                    style="@style/BoldTextviewStyleBlack"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="@string/text_new_registration"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

                <LinearLayout
                    android:id="@+id/llAadharContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/aadhar_number"
                        android:textColor="@color/white" />

                    <!--<androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">-->

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etAadharNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/enter_aadhar_number"
                        android:inputType="number"
                        android:letterSpacing="0.5"
                        android:maxLength="14"
                        android:padding="@dimen/dp5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black"/>
                    <!-- </androidx.cardview.widget.CardView>-->

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp30"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@drawable/red_button_rounded_corner"
                        android:elevation="@dimen/dp25"
                        android:text="@string/text_check"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRegistrationStep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp10"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BoldTextviewStyleBlack"
                    android:textSize="@dimen/sp18"
                    android:gravity="center"
                    android:text="@string/txt_personal_details"/>
                <LinearLayout
                    android:id="@+id/llDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_first_name" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_middle_name" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etMiddleName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_last_name" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_DOB" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <EditText
                            android:id="@+id/etDOB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:cursorVisible="false"
                            android:drawableEnd="@drawable/calendar_icon"
                            android:drawableTint="@color/red_700"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18"/>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_UDID" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etUDID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_mobile_number" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_type_of_divyang" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinnerTypeOfDivyang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/type"
                            android:padding="@dimen/dp5" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_pcmc_zone" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinnerZone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp5" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_zone_ward" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinnerWard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/ward"
                            android:padding="@dimen/dp5" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_addredd" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLines="6"
                            android:padding="@dimen/dp5"
                            android:scrollbars="vertical"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAddParentDetails"
                            style="@style/BoldTextviewStyleBlack"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp10"
                            android:gravity="center"
                            android:text="@string/text_add_parents_details"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/red_700"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/red_700" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llParentDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_parent_name" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etParentName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_DOB" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etParentDOB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:cursorVisible="false"
                            android:drawableEnd="@drawable/calendar_icon"
                            android:drawableTint="@color/red_700"
                            android:enabled="false"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/aadhar_number" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etParentAadharNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:maxLength="14"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_mobile_number" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etParentMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>

                    <CheckBox
                        android:id="@+id/cbParentMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp25"
                        android:buttonTint="@color/red_700"
                        android:text="@string/text_same_as_above"
                        android:textColor="@color/red_700"
                        android:textSize="@dimen/sp14" />


                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:text="@string/text_addredd" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etParentAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLines="6"
                            android:padding="@dimen/dp5"
                            android:textSize="@dimen/sp18" />
                    </androidx.cardview.widget.CardView>

                    <CheckBox
                        android:id="@+id/cbParentAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp25"
                        android:buttonTint="@color/red_700"
                        android:text="@string/text_same_as_above"
                        android:textColor="@color/red_700"
                        android:textSize="@dimen/sp14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRegistrationStep2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BoldTextviewStyleBlack"
                    android:textSize="@dimen/sp18"
                    android:gravity="center"
                    android:text="@string/txt_profile_picture"/>

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:background="@drawable/red_edittext_rounded_corner"
                    android:src="@drawable/profile_icon"
                    android:padding="@dimen/dp2"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCapture"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/red_button_rounded_corner"
                    android:elevation="@dimen/dp25"
                    android:text="@string/text_capture"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRegistrationStep3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BoldTextviewStyleBlack"
                    android:textSize="@dimen/sp18"
                    android:gravity="center"
                    android:text="@string/txt_scan_fingerprint"/>

                <ImageView
                    android:id="@+id/imgFingerPrint"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:background="@drawable/red_edittext_rounded_corner"
                    android:src="@drawable/fingerprint_icon"
                    android:padding="@dimen/dp2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp30"
                    android:layout_marginEnd="@dimen/dp30">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonFPNotAvailable"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp30"
                        android:layout_gravity="start"
                        android:background="@drawable/red_button_rounded_corner"
                        android:elevation="@dimen/dp25"
                        android:text="@string/text_not_available"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonScanFinger"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="end"
                    android:background="@drawable/red_button_rounded_corner"
                    android:elevation="@dimen/dp25"
                    android:text="@string/text_scan"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp20"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRegistrationStep4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BoldTextviewStyleBlack"
                    android:textSize="@dimen/sp18"
                    android:gravity="center"
                    android:text="@string/txt_scan_eyes"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/red_edittext_rounded_corner">
                <ImageView
                    android:id="@+id/ivLeftEye"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/eye_icon"
                    android:padding="@dimen/dp2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/BoldTextviewStyleBlack"
                            android:text="Left Eye"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:id="@+id/leftEyeTick"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:background="@drawable/btn_check_on"
                            android:layout_gravity="end"
                            android:visibility="gone"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonScanLeftIris"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp30"
                            android:layout_gravity="center"
                            android:background="@drawable/red_button_rounded_corner"
                            android:elevation="@dimen/dp25"
                            android:text="@string/text_scan"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/dp5"/>


                </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp10"
                        android:background="@drawable/red_edittext_rounded_corner">
                    <ImageView
                        android:id="@+id/ivRightEye"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:src="@drawable/eye_icon"
                        android:padding="@dimen/dp2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/BoldTextviewStyleBlack"
                            android:text="Right Eye"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/rightEyeTick"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:background="@drawable/btn_check_on"
                            android:layout_gravity="end"
                            android:visibility="gone"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonScanRightIris"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp30"
                            android:layout_gravity="center"
                            android:background="@drawable/red_button_rounded_corner"
                            android:elevation="@dimen/dp25"
                            android:text="@string/text_scan"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/dp5"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp10">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonIrisNotAvailable"
                        android:layout_width="150dp"
                        android:layout_height="@dimen/dp30"
                        android:layout_gravity="center"
                        android:background="@drawable/red_button_rounded_corner"
                        android:elevation="@dimen/dp25"
                        android:text="@string/text_not_available"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRegistrationStep5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BoldTextviewStyleBlack"
                    android:textSize="@dimen/sp18"
                    android:gravity="center"
                    android:text="@string/txt_upload_docs"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp10">
                    <ImageView
                        android:id="@+id/proofAadharFront"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/dp2"
                        android:src="@drawable/profile_icon"
                        android:background="@drawable/red_edittext_rounded_corner"/>

                    <TextView
                        style="@style/BoldTextviewStyleBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
