                android:text="9875687512"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :- "
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:minWidth="130dp"/>

            <TextView
                android:id="@+id/txtParentAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganesh Nagar, Behind Chinchwad Railway station, Chinchwad, Pune-411027"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp5">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonGenerateCert"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp30"
            android:layout_gravity="start"
            android:background="@drawable/red_button_rounded_corner"
            android:elevation="@dimen/dp25"
            android:text="@string/text_generate_cert"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonScanFinger"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp30"
            android:layout_gravity="end"
            android:background="@drawable/red_button_rounded_corner"
            android:elevation="@dimen/dp25"
            android:text="@string/text_edit_details"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp20"/>
    </LinearLayout>
</RelativeLayout>